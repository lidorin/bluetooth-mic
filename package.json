{
  "name": "bluetooth-mic",
  "version": "1.0.0",
  "description": "Web application that turns a smartphone into a Bluetooth microphone",
  "main": "dist/server/index.js",
  "scripts": {
    "start": "node dist/server/index.js",
    "build": "npm run build:client && npm run build:server",
    "build:client": "webpack --mode production",
    "build:server": "tsc -p tsconfig.json",
    "vercel-build": "webpack --mode production",
    "dev": "webpack serve --mode development",
    "dev:server": "nodemon --watch src/server --exec ts-node src/server/index.ts"
  },
  "keywords": ["bluetooth", "microphone", "web", "audio"],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "express": "^4.18.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "socket.io": "^4.7.2",
    "socket.io-client": "^4.7.2",
    "typescript": "^5.3.3",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.5",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "ts-loader": "^9.5.1"
  },
  "devDependencies": {
    "css-loader": "^6.8.1",
    "nodemon": "^3.0.2",
    "style-loader": "^3.3.3",
    "ts-node": "^10.9.2",
    "webpack-dev-server": "^4.15.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
